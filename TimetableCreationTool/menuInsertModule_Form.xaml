<Window x:Class="TimetableCreationTool.menuInsertModule_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimetableCreationTool"
        mc:Ignorable="d"
        Title="Add a Module" Height="180" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="moduleCode" Content="Module Code:" HorizontalAlignment="Left" Margin="25,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="moduleName" Content="Module Name:" HorizontalAlignment="Left" Margin="25,59,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="moduleCodeTextbox" HorizontalAlignment="Left" Height="26" Margin="135,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="moduleNameTextbox" HorizontalAlignment="Left" Height="26" Margin="135,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


        <Button x:Name="saveButton" Content="Save" Height="25" Margin="40,104,0,0" VerticalAlignment="Top" IsDefault="True" Click="OnSave" HorizontalAlignment="Left" Width="85"/>
        <Button x:Name="cancelButton" Content="Cancel" Height="25" Margin="167,104,40,0" VerticalAlignment="Top" IsCancel="True"/>


    </Grid>
</Window>
